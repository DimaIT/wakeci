{
    "eslint.validate": [
        "vue",
        "javascript",
    ],
    "editor.detectIndentation": false,
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },
    "eslint.workingDirectories": [
        "src/frontend/"
    ],
    "gopls": {
        "buildFlags": [
            "-tags=wireinject"
        ],
    },
    "[vue]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
}
